function [USpout, VSpout, USuout, VSuout] = calcSourceTerms(bounds, USp, VSp, USu, VSu, deltaX, deltaY, mu)
USpout = zeros(size(USp));
VSpout = zeros(size(VSp));
USuout = zeros(size(USu));
VSuout = zeros(size(VSu));

types = bounds.types;

% 0 - zed, 1 - pohybujici se zed, 2 - inlet, 3 - outlet

-2*mu*deltaX/deltaY

if types.ntype == 0
    USpout(end-1, :) = -2*mu*deltaX/deltaY;
end
if types.stype == 0
    USpout(2, :) = -2*mu*deltaX/deltaY;
end


if types.wtype == 0
    VSpout(:, 2) = -2mu*deltaY/(deltaX/2);
end
if types.etype == 0
    VSpout(:, end-1) = -mu*deltaY/(deltaX/2);
end

if types.ntype == 1
    USpout(end-1, :) = -mu*deltaX/(deltaY/2);
    USuout(end-1, :) = mu*bounds.u.n*deltaX/(deltaY/2);
end
if types.stype == 1
    USpout(2, :) = -mu*deltaY/(deltaY/2);
    USuout(2, :) = mu*bounds.u.s*deltaY/(deltaY/2);
end


if types.wtype == 1
    VSpout(:, 2) = -mu*deltaX/(deltaX/2);
    VSuout(:, 2) = mu*bounds.v.w*deltaX/(deltaX/2);
end
if types.etype == 1
    VSpout(:, end-1) = -mu*deltaY/deltaX;
    VSuout(:, end-1) = mu*bounds.v.e*deltaY/(deltaX/2);
end

end

